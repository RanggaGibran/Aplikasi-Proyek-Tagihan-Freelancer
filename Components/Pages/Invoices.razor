@page "/invoices"
@rendermode InteractiveServer

<PageTitle>Manajemen Tagihan</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="page-title">
                <i class="bi bi-receipt me-2"></i> Manajemen Tagihan
            </h1>
            <button class="btn btn-primary" disabled>
                <i class="bi bi-plus-circle me-1"></i> Buat Invoice Baru
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-receipt display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">Fitur Tagihan</h3>
                    <p class="text-muted">Fitur manajemen tagihan akan diimplementasikan pada fase berikutnya.</p>
                    <div class="alert alert-info mt-4">
                        <strong>Coming Soon!</strong> Fitur ini akan tersedia di versi 1.1 sesuai roadmap pengembangan.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Placeholder Table for Future Invoice List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Daftar Invoice</h5>
                </div>
                <div class="card-body">
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-file-earmark-text display-6"></i>
                        <div>Belum ada data invoice.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>